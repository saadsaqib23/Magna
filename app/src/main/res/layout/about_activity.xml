<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ABOUT MAGNA"
        android:textColor="#ffffff"
        android:textSize="50dp"/>

    <TextView
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#35a7ab"
        android:gravity="center"
        android:padding="10dp"
        android:text="MAGNA took the light for the very first time in 2018. The history of Forman Christian College ( A chartered university) had never experienced an event like this before as MAGNA posed an opportunity for all societies to work together in harmony and deliver a master piece. The event gained all the praises it deserved as it gained a lot of success where it catered to 700+ delegates whilst also garnering coverage from Social and Print media."
        android:textColor="#ffffff"
        android:textSize="15dp"

        />
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:layout_marginRight="1dp"
            android:text="16+ Competitions"

            android:textColor="#ffffff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="1dp"
            android:background="@color/colorPrimary"
            android:text="1500+ Participants"
            android:clickable="false"
            android:textColor="#ffffff"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:background="@color/colorPrimary"
            android:text="50+ Institutions"
            android:clickable="false"
            android:textColor="#ffffff"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="1dp"
            android:clickable="false"
            android:background="@color/colorPrimary"
            android:text="2 Years experience"
            android:textColor="#ffffff"

            />
    </LinearLayout>
</LinearLayout>

